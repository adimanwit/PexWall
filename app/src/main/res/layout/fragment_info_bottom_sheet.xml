<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="wallpaper"
            type="com.adwi.pexwallpapers.data.local.entity.Wallpaper" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_small">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/info_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/wallpaper_image_cardview"
                android:layout_width="100dp"
                android:layout_height="0dp"
                app:cardCornerRadius="@dimen/image_corner_radius"
                app:layout_constraintBottom_toBottomOf="@id/wallpaper_info_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/wallpaper_info_container">

                <ImageView
                    android:id="@+id/wallpaper_imageView"
                    loadImageFromUrl="@{wallpaper.imageUrl}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/image_photo_placeholder" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/wallpaper_info_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/wallpaper_image_cardview"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_extra_extra_small"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/photo_by_textview"
                        style="@style/TextStyle.InfoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photo by:" />

                    <TextView
                        android:id="@+id/photographer_title_textview"
                        style="@style/TextStyle.InfoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:singleLine="true"
                        android:text="@{wallpaper.photographer}"
                        tools:text="Kammeran Gonzales" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_extra_extra_small"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/width_title_textview"
                        style="@style/TextStyle.InfoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Width:" />

                    <TextView
                        android:id="@+id/width_value_textview"
                        style="@style/TextStyle.InfoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:singleLine="true"
                        android:text="@{wallpaper.width.toString()}"
                        tools:text="3000px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_extra_extra_small"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/height_title_textview"
                        style="@style/TextStyle.InfoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height:" />

                    <TextView
                        android:id="@+id/height_value_textview"
                        style="@style/TextStyle.InfoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_small"
                        android:singleLine="true"
                        android:text="@{wallpaper.height.toString()}"
                        tools:text="2000px" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_extra_extra_small"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/photos_provided_by_textview"
                        style="@style/TextStyle.InfoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_extra_extra_small"
                        android:text="@string/photo_provided_by_pexels" />

                    <ImageView
                        android:id="@+id/pexels_button"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="@dimen/margin_small"
                        android:clickable="true"
                        android:contentDescription="@string/pexels_com_button"
                        android:focusable="true"
                        android:src="@drawable/image_pexels_logo" />

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>