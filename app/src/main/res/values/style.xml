<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="actionModeBackground">@color/contextualActionBarColor</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationViewStyle</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
    </style>

    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/image_splash</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="CustomActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/darkGray</item>
        <item name="android:textColor">@color/white</item>
        <item name="checkedIconTint">@color/colorPrimary</item>
    </style>

    <style name="DetailsActivityStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@color/statusBarColor</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="background">@color/actionBarBackgroundColor</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">@dimen/elevation_small</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomBottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/bottomNavBackground</item>
        <item name="itemIconTint">@color/bottom_nav_view_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_view_item_color</item>
    </style>

    <style name="text_alert">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.ToolbarTitle">
        <item name="android:textColor">@color/darkGray</item>
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TextStyle.Normal">
        <item name="android:textSize">@dimen/condensed_text_size</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="TextStyle.Normal.Regular">
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="TextStyle.Normal.Condensed">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="TextStyle.InfoTitle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="TextStyle.InfoText">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TextStyle.Condensed">
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">@dimen/condensed_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">true</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
    </style>

    <style name="TextStyle.Header">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="TextStyle.Button">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TextStyle.Clock">
        <item name="android:textSize">@dimen/clock_text_size</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="RadioWithTextOnTop">
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">?android:attr/listChoiceIndicatorSingle</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/condensed_text_size</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
    </style>

    <style name="CustomButton">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:animateOnClick">true</item>
        <item name="background">@drawable/button_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_margin">@dimen/margin_extra_small</item>
        <item name="android:paddingHorizontal">@dimen/margin_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/colorPrimary</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/image_corner_radius</item>
    </style>

</resources>